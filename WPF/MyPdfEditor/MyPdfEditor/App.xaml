<Application x:Class="MyPdfEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyPdfEditor"
             xmlns:converters="clr-namespace:MyPdfEditor.WPF.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Styles -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="MinWidth" Value="75" />
            <Setter Property="Background" Value="#FFDDDDDD" />
            <Setter Property="BorderBrush" Value="#FF707070" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEEEEEE" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFCCCCCC" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="4" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="4" />
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="4" />
        </Style>

        <Style TargetType="Menu">
            <Setter Property="Background" Value="#FFF0F0F0" />
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <Style TargetType="ToolBar">
            <Setter Property="Background" Value="#FFF5F5F5" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
        </Style>

        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#FFF0F0F0" />
            <Setter Property="BorderThickness" Value="1,0,0,0" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
        </Style>

        <Style TargetType="Expander">
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <!-- Converters -->
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <local:ZoomConverter x:Key="ZoomConverter" />
        <local:PointsToPixelsConverter x:Key="PointsToPixelsConverter" />
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <local:FieldTypeConverter x:Key="FieldTypeConverter" />
        <local:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
        <local:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter" />
        <local:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter" />
        <local:TextAlignmentConverter x:Key="TextAlignmentConverter" />
        <local:SelectionModeConverter x:Key="SelectionModeConverter" />
        <local:ButtonActionConverter x:Key="ButtonActionConverter" />

        <!-- Dialog ViewModels -->
        <DataTemplate DataType="{x:Type local:NewDocumentDialogViewModel}">
            <local:NewDocumentDialog />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:SecurityDialogViewModel}">
            <local:SecurityDialog />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:ExportDialogViewModel}">
            <local:ExportDialog />
        </DataTemplate>

        <!-- Field ViewModels -->
        <DataTemplate DataType="{x:Type local:TextFieldViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:CheckboxFieldViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:RadioButtonFieldViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:ComboBoxFieldViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:ListBoxFieldViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:ButtonFieldViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <!-- Main ViewModels -->
        <DataTemplate DataType="{x:Type local:MainViewModel}">
            <local:MainWindow />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:DocumentViewModel}">
            <local:DocumentView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:PropertiesPanelViewModel}">
            <local:PropertiesPanel />
        </DataTemplate>

    </Application.Resources>
</Application>
