<Window x:Class="PDFCustomEditorV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        mc:Ignorable="d"
        Title="PDF Editor con PDFsharp" Height="700" Width="900">
    <DockPanel>
        <!-- Barra de herramientas -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" Height="40">
            <Button x:Name="btnLoadPdf" Content="📁 Cargar PDF" Click="btnLoadPdf_Click" 
                    Margin="5" Width="100"/>
            <Button x:Name="btnAddTextBox" Content="✏️ Agregar Texto" Click="btnAddTextBox_Click" 
                    Margin="5" Width="120"/>
            <Button x:Name="btnSavePdf" Content="💾 Guardar PDF" Click="btnSavePdf_Click" 
                    Margin="5" Width="100"/>
            <ComboBox x:Name="cmbFontSize" Width="80" Margin="5" SelectedIndex="2">
                <ComboBoxItem>8</ComboBoxItem>
                <ComboBoxItem>10</ComboBoxItem>
                <ComboBoxItem>12</ComboBoxItem>
                <ComboBoxItem>14</ComboBoxItem>
                <ComboBoxItem>16</ComboBoxItem>
                <ComboBoxItem>18</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="cmbFontColor" Width="100" Margin="5" SelectedIndex="0">
                <ComboBoxItem Tag="Black">Negro</ComboBoxItem>
                <ComboBoxItem Tag="Red">Rojo</ComboBoxItem>
                <ComboBoxItem Tag="Blue">Azul</ComboBoxItem>
                <ComboBoxItem Tag="Green">Verde</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Área principal -->
        <Grid>
            <wf:WindowsFormsHost x:Name="pdfHost" Background="White">
                <wf:WindowsFormsHost.Child>
                    <wf:PdfViewer x:Name="pdfViewer"/>
                </wf:WindowsFormsHost.Child>
            </wf:WindowsFormsHost>

            <!-- Canvas para overlays (textboxes editables) -->
            <Canvas x:Name="overlayCanvas" IsHitTestVisible="True" Background="Transparent"/>
        </Grid>

        <!-- Barra de estado -->
        <StatusBar DockPanel.Dock="Bottom" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Listo"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="pageInfoText" Text="Página: 0/0" Margin="20,0,0,0"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>